<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    //LinearLayout
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="com.example.geoquiz.ResultActivity">

        <TextView
            android:id="@+id/question_text_view"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/answer_text_view"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            tools:text="Answer" />

        <Button
            android:id="@+id/num_correct_button"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:text="@string/num_correct_button"
            app:backgroundTint="#2196F3" />

        <Button
            android:id="@+id/num_incorrect_button"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="@string/num_incorrect_button"
            app:backgroundTint="#2196F3" />

        <Button
            android:id="@+id/score_button"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:text="@string/score_button"
            app:backgroundTint="#FFC107"
            app:iconTint="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>